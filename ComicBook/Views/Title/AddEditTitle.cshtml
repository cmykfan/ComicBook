@model ComicBook.Models.TitleViewModel
@{
    var isEditMode = Model.TitleId != null;
    ViewBag.Title = isEditMode ? "Edit " + Model.FullName : "Add Title";
}

<h2>@Model.FullName</h2>

<div class="row">
    <div class="col-sm-6 col-xs-10">
        @using (Html.BeginForm(isEditMode ? "EditTitle" : "AddTitle", "Title"))
        {
            @Html.HiddenFor(m => m.TitleId)
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Artist)
                @Html.TextBoxFor(m => m.Artist, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">@(isEditMode ? "Save" : "Add")</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>

